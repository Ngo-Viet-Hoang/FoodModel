<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>CreateCategoryServlet</servlet-name>
        <servlet-class>com.example.foodmodel.controller.category.CreateCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateCategoryServlet</servlet-name>
        <url-pattern>/admin/categories/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CategoryListServlet</servlet-name>
        <servlet-class>com.example.foodmodel.controller.category.CategoryListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CategoryListServlet</servlet-name>
        <url-pattern>/admin/categories/list</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateCategoryServlet</servlet-name>
        <servlet-class>com.example.foodmodel.controller.category.UpdateCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateCategoryServlet</servlet-name>
        <url-pattern>/admin/categories/update</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteCategory</servlet-name>
        <servlet-class>com.example.foodmodel.controller.category.DeleteCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteCategory</servlet-name>
        <url-pattern>/admin/categories/delete</url-pattern>
    </servlet-mapping>

    <!--    food-->
    <servlet>
        <servlet-name>CreateFoodServlet</servlet-name>
        <servlet-class>com.example.foodmodel.controller.food.CreateFoodServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateFoodServlet</servlet-name>
        <url-pattern>/admin/foods/create</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>FoodListServlet</servlet-name>
        <servlet-class>com.example.foodmodel.controller.food.FoodListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FoodListServlet</servlet-name>
        <url-pattern>/admin/foods/list</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateFoodServlet</servlet-name>
        <servlet-class>com.example.foodmodel.controller.food.UpdateFoodServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateFoodServlet</servlet-name>
        <url-pattern>/admin/foods/update</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteFoodServlet</servlet-name>
        <servlet-class>com.example.foodmodel.controller.food.DeleteFoodServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteFoodServlet</servlet-name>
        <url-pattern>/admin/foods/delete</url-pattern>
    </servlet-mapping>


</web-app>